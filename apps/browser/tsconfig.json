{
	"extends": ["@viweb/typescript/base.json", "./.wxt/tsconfig.json"],
	"compilerOptions": {
		"lib": ["ES2022", "dom", "dom.iterable"],
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@content/*": ["./src/app/content/*"]
		},
		"module": "esnext",
		"types": ["chrome", "vite/client"]
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
